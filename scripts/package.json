{
    "name": "notion-cms-tech-blog-scripts",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "lint": "eslint --ext .ts .",
        "lint:fix": "npm run lint -- --fix",
        "lint-staged": "lint-staged",
        "export-mds": "ts-node -r tsconfig-paths/register  src/export-mds && npm run format-mds",
        "generate-og-images": "ts-node -r tsconfig-paths/register  src/generate-og-images-by-playwright",
        "format-mds": "prettier --write --ignore-path .gitignore '../exported-posts/*md'",
        "format": "prettier --write --ignore-path .gitignore './**/*.{md,html,js,jsx,ts,tsx,json}'"
    },
    "dependencies": {
        "@notionhq/client": "^2.2.5",
        "dotenv": "^16.1.4",
        "ejs": "^3.1.9",
        "notion-to-md": "^3.0.1",
        "playwright": "^1.34.3",
        "typescript": "5.1.3"
    },
    "devDependencies": {
        "@types/ejs": "^3.1.2",
        "@types/node": "^20.2.5",
        "eslint": "8.42.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-unused-imports": "^2.0.0",
        "prettier": "^2.8.8",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0"
    },
    "volta": {
        "node": "16.18.1",
        "npm": "8.19.2"
    }
}
